<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_fb"
>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44" android:background="@color/white"
    >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单分享"
            android:textColor="@color/black"
            android:textSize="@dimen/font16"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space1"
        android:background="@color/divider_gray_dark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space36"
        android:gravity="center"
        android:orientation="horizontal"
    >

        <LinearLayout
            android:id="@+id/ll_send_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/space49"
                android:layout_height="@dimen/space49"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/space9"
                android:text="转给附近司机"
                android:textSize="@dimen/space14"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_subscribe_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space60"
            android:gravity="center"
            >

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/space49"
                android:layout_height="@dimen/space49"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/space9"
                android:text="预约短途出租"
                android:textSize="@dimen/space14"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space18"
        android:paddingLeft="@dimen/space10"
        android:paddingRight="@dimen/space10"
        >
        
        <View
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent"
            android:background="@color/color_yellow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font15"
            android:text="订单收益"
            android:layout_marginLeft="@dimen/space6"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font12"
            android:layout_marginLeft="@dimen/space8"
            android:text="2019年8月"
            android:textColor="@color/font_gray6"
            android:drawableRight="@drawable/ic_rightarrow"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/space15"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:background="@drawable/shape_round_blue"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space20"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:text="转单日期"
                android:textSize="@dimen/font12"
                android:textColor="@color/gray_d"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="总价"
                android:textSize="@dimen/font12"
                android:textColor="@color/gray_d"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收益"
                android:textSize="@dimen/font12"
                android:textColor="@color/gray_d"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space0.5"
            android:background="@color/gray_d"
            android:layout_marginTop="@dimen/space13"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bill_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space5"

            />

    </LinearLayout>

</LinearLayout>