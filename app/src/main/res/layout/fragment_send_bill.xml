<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fb"
    android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单分享"
            android:textColor="@color/black"
            android:textSize="@dimen/font16" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space36"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_send_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/space49"
                android:layout_height="@dimen/space49"
                android:src="@mipmap/zhuangei" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space9"
                android:gravity="center_horizontal"
                android:text="转给附近司机\n敬请期待"
                android:textSize="@dimen/space14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_subscribe_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space60"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/space49"
                android:layout_height="@dimen/space49"
                android:src="@mipmap/yuyueduantu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space9"
                android:text="预约短途出租"
                android:textSize="@dimen/space14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space18"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space10"
        android:paddingRight="@dimen/space10">

        <View
            android:layout_width="@dimen/space2"
            android:layout_height="match_parent"
            android:background="@color/color_yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space6"
            android:text="订单收益 - 假数据"
            android:textColor="@color/black"
            android:textSize="@dimen/font15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space8"
            android:drawableRight="@drawable/ic_rightarrow"
            android:text="2019年8月"
            android:textColor="@color/font_gray6"
            android:textSize="@dimen/font12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space15"
        android:background="@drawable/shape_round_blue"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="转单日期"
                android:textColor="@color/gray_d"
                android:textSize="@dimen/font12" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="总价"
                android:textColor="@color/gray_d"
                android:textSize="@dimen/font12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收益"
                android:textColor="@color/gray_d"
                android:textSize="@dimen/font12" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space0.5"
            android:layout_marginTop="@dimen/space13"
            android:background="@color/gray_d" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bill_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space5"

            />

    </LinearLayout>

</LinearLayout>