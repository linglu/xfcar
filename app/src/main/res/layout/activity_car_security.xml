<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_fb"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@color/white"
    >

        <ImageView
            android:id="@+id/iv_return_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_return_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space20"
        />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆安全"
            android:textColor="@color/black"
            android:textSize="@dimen/font16"
        />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fuwuqi"
            />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_bind_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space9"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="绑定车架码"
            android:inputType="text"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dianhuax"
            />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_bind_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="绑定手机"
            android:inputType="text"
            android:paddingLeft="@dimen/space9"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chexing_1"
            />

        <com.xfcar.driver.widget.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space9"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="车牌号码"
            android:inputType="text"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:background="@drawable/selector_green_btn_login"
        android:gravity="center"
        android:layout_marginTop="@dimen/space20"
        android:layout_marginBottom="@dimen/space25"
        android:text="确定绑定"
        android:textColor="@color/background_primary"
        android:textSize="@dimen/font14"/>

</LinearLayout>
