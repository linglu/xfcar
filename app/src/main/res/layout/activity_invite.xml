<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space60"
    >

        <RelativeLayout
            android:id="@+id/rl_return_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/space20"
        >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space20"
                android:src="@mipmap/ic_return_back"
            />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请好友"
            android:textColor="@color/black"
            android:textSize="@dimen/font16"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space1"
        android:background="@color/gray"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:layout_marginTop="@dimen/space15"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请人姓名: "
            android:textSize="@dimen/font_normal"
        />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_invite_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space50"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入邀请人姓名"
            android:inputType="text"
            android:maxLength="11"
            android:paddingLeft="@dimen/space20"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line_height"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:background="@color/divider_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:layout_marginTop="@dimen/space15"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请人工号: "
            android:textSize="@dimen/font_normal"
        />

        <TextView
            android:id="@+id/tv_work_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space50"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space5"
            android:background="@null"
            android:gravity="center_vertical"
            tools:text="XF001"
            android:inputType="text"
            android:maxLength="11"
            android:paddingLeft="@dimen/space20"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line_height"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:background="@color/divider_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:layout_marginTop="@dimen/space15"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被邀人姓名: "
            android:textSize="@dimen/font_normal"
        />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_invited_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space50"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入被邀人姓名"
            android:inputType="text"
            android:maxLength="11"
            android:paddingLeft="@dimen/space20"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line_height"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:background="@color/divider_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:layout_marginTop="@dimen/space15"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被邀人电话: "
            android:textSize="@dimen/font_normal"
        />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_invited_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space50"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入被邀人手机号"
            android:inputType="text"
            android:maxLength="11"
            android:paddingLeft="@dimen/space20"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line_height"
        android:layout_marginLeft="@dimen/space25"
        android:layout_marginRight="@dimen/space25"
        android:background="@color/divider_dark"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space10"
        android:layout_marginTop="@dimen/space20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/space40"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:background="@drawable/selector_green_btn_login"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/background_primary"
            android:textSize="@dimen/font_large"/>
    </LinearLayout>

</LinearLayout>