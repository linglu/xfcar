<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@color/white"
    >

        <RelativeLayout
            android:id="@+id/rl_return_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/space20"
        >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space20"
                android:src="@mipmap/ic_return_back"
            />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请好友"
            android:textColor="@color/black"
            android:textSize="@dimen/font16"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xingming"
            />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_invite_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space9"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="邀请人姓名"
            android:inputType="text"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font14"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shenqingrengonghao"
            />

        <TextView
            android:id="@+id/tv_work_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space9"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="邀请人工号"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font14"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xingming"
            />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_invited_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space9"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="被邀人姓名"
            android:inputType="text"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font14"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginTop="@dimen/space15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:elevation="@dimen/space1"
        android:background="@drawable/shape_round"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dianhuax"
            />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_invited_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space9"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="被邀人电话"
            android:inputType="text"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font14"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:background="@drawable/selector_green_btn_login"
        android:gravity="center"
        android:layout_marginTop="@dimen/space20"
        android:layout_marginBottom="@dimen/space25"
        android:text="确定"
        android:textColor="@color/background_primary"
        android:textSize="@dimen/font14"/>

</LinearLayout>