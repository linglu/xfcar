<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_f2"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@color/white"

    >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/black"
            android:textSize="@dimen/font16"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space100"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/space36"
            android:layout_height="@dimen/space36"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/space15"
            />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font14"
            android:layout_marginLeft="@dimen/space10"
            android:textColor="@color/text_color_gray"
            android:text="小明"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space13"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
    >

        <LinearLayout
            android:id="@+id/ll_my_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            >

            <ImageView
                android:layout_width="@dimen/space24"
                android:layout_height="@dimen/space24"
                android:src="@mipmap/qianbao"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray3"
                android:textSize="@dimen/font14"
                android:text="我的钱包"
                android:layout_marginLeft="@dimen/space10"
                android:drawableRight="@drawable/ic_rightarrow"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/space20"
            android:layout_marginBottom="@dimen/space15"
            >

            <LinearLayout
                android:id="@+id/ll_balance_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space48"
                android:layout_marginRight="@dimen/space22"
                >
                
                <ImageView
                    android:layout_width="@dimen/space18"
                    android:layout_height="@dimen/space18"
                    android:src="@mipmap/yue_1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textSize="@dimen/font13"
                    android:textColor="@color/font_gray3"
                    android:layout_marginLeft="@dimen/space9"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9F553A"
                    android:textSize="@dimen/font13"
                    android:text="￥2000"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space48"
                android:layout_marginRight="@dimen/space22"
                android:layout_marginTop="@dimen/space13"
                >

                <ImageView
                    android:layout_width="@dimen/space18"
                    android:layout_height="@dimen/space18"
                    android:src="@mipmap/shoukuan_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款"
                    android:textSize="@dimen/font13"
                    android:textColor="@color/font_gray3"
                    android:layout_marginLeft="@dimen/space9"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space48"
                android:layout_marginRight="@dimen/space22"
                android:layout_marginTop="@dimen/space13"
                >

                <ImageView
                    android:layout_width="@dimen/space18"
                    android:layout_height="@dimen/space18"
                    android:src="@mipmap/chaxun"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询"
                    android:textSize="@dimen/font13"
                    android:textColor="@color/font_gray3"
                    android:layout_marginLeft="@dimen/space9"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sent_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space48"
                android:layout_marginRight="@dimen/space22"
                android:layout_marginTop="@dimen/space13"
                >

                <ImageView
                    android:layout_width="@dimen/space18"
                    android:layout_height="@dimen/space18"
                    android:src="@mipmap/ticheng"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转单提成"
                    android:textSize="@dimen/font13"
                    android:textColor="@color/font_gray3"
                    android:layout_marginLeft="@dimen/space9"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/space48"
                android:layout_marginRight="@dimen/space22"
                android:layout_marginTop="@dimen/space13"
                >

                <ImageView
                    android:layout_width="@dimen/space18"
                    android:layout_height="@dimen/space18"
                    android:src="@mipmap/jiangli"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐奖励"
                    android:textSize="@dimen/font13"
                    android:textColor="@color/font_gray3"
                    android:layout_marginLeft="@dimen/space9"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/gray_d"

            />

        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            >

            <ImageView
                android:layout_width="@dimen/space24"
                android:layout_height="@dimen/space24"
                android:src="@mipmap/jifen_copy"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray3"
                android:textSize="@dimen/font14"
                android:layout_marginLeft="@dimen/space10"
                android:text="我的积分"
                android:drawableRight="@drawable/ic_rightarrow"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/gray_d"
            />

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            >

            <ImageView
                android:layout_width="@dimen/space24"
                android:layout_height="@dimen/space24"
                android:src="@mipmap/xiaoxi_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray3"
                android:textSize="@dimen/font14"
                android:text="我的消息"
                android:layout_marginLeft="@dimen/space10"
                android:drawableRight="@drawable/ic_rightarrow"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space1"
            android:background="@color/gray_d"
            />

        <LinearLayout
            android:id="@+id/ll_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            >

            <ImageView
                android:layout_width="@dimen/space24"
                android:layout_height="@dimen/space24"
                android:src="@mipmap/quanxianshezhi"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray3"
                android:textSize="@dimen/font14"
                android:text="权限设置"
                android:layout_marginLeft="@dimen/space10"
                android:drawableRight="@drawable/ic_rightarrow"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>