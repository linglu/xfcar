<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space22"
        android:paddingTop="@dimen/space22"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space30"
            android:layout_marginRight="@dimen/space30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >

            <ImageView
                android:id="@+id/iv_contain_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_buy_select"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:text="包上牌.购置税"
                android:textColor="#ff666666"
                android:textSize="12sp"
            />

            <View android:layout_width="0dp" android:layout_height="@dimen/space1"
                  android:layout_weight="1.0"
            />

            <ImageView
                android:id="@+id/iv_first_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_buy_not_select"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:text="送首年保险"
                android:textColor="#ff666666"
                android:textSize="12sp"
            />

            <View android:layout_width="0dp"
                  android:layout_height="@dimen/space1"
                  android:layout_weight="1.0"
            />

            <ImageView
                android:id="@+id/iv_factory_ensure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_buy_not_select"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space10"
                android:text="厂家质保"
                android:textColor="#ff666666"
                android:textSize="12sp"
            />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space15"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    </LinearLayout>

</ScrollView>
