<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/space22"
        android:paddingBottom="@dimen/space22"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space1"
                android:layout_gravity="center_vertical"
                android:background="@color/gray_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space14"
                android:text="全款购买"
                android:textColor="@color/font_gray6"
                android:textSize="14sp" />

            <View
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space14"
                android:background="@color/gray_d" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space24"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space58"
            android:paddingRight="@dimen/space58">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="#ff666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space4"
                android:layout_weight="1.0"
                android:text="¥240,000.00"
                android:textColor="#ff9f553a"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="@dimen/space70"
                android:layout_height="@dimen/space27"
                android:background="@drawable/shape_button_buy"
                android:gravity="center"
                android:text="购买"
                android:textColor="#ffa84337"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space22"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space1"
                android:layout_gravity="center_vertical"
                android:background="@color/gray_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space14"
                android:text="以租代购"
                android:textColor="@color/font_gray6"
                android:textSize="14sp" />

            <View
                android:layout_width="@dimen/space40"
                android:layout_height="@dimen/space1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space14"
                android:background="@color/gray_d" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space70"
            android:layout_marginLeft="@dimen/space38"
            android:layout_marginTop="@dimen/space18"
            android:layout_marginRight="@dimen/space38"
            android:background="@drawable/shape_round_red">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space22"
                android:layout_marginTop="@dimen/space16"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12个月付清"
                    android:textColor="#ffffddb0"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space5"
                    android:text="¥1000.00/月"
                    android:textColor="#ffffddb0"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView

                android:layout_width="@dimen/space70"
                android:layout_height="@dimen/space27"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space20"
                android:background="@drawable/shape_button_buy"
                android:gravity="center"
                android:text="购买"
                android:textColor="#ffa84337"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space70"
            android:layout_marginLeft="@dimen/space38"
            android:layout_marginTop="@dimen/space18"
            android:layout_marginRight="@dimen/space38"
            android:background="@drawable/shape_round_red">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space22"
                android:layout_marginTop="@dimen/space16"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12个月付清"
                    android:textColor="#ffffddb0"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space5"
                    android:text="¥1000.00/月"
                    android:textColor="#ffffddb0"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/space70"
                android:layout_height="@dimen/space27"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space20"
                android:background="@drawable/shape_button_buy"
                android:gravity="center"
                android:text="购买"
                android:textColor="#ffa84337"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space70"
            android:layout_marginLeft="@dimen/space38"
            android:layout_marginTop="@dimen/space18"
            android:layout_marginRight="@dimen/space38"
            android:background="@drawable/shape_round_red">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space22"
                android:layout_marginTop="@dimen/space16"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12个月付清"
                    android:textColor="#ffffddb0"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space5"
                    android:text="¥1000.00/月"
                    android:textColor="#ffffddb0"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/space70"
                android:layout_height="@dimen/space27"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space20"
                android:background="@drawable/shape_button_buy"
                android:gravity="center"
                android:text="购买"
                android:textColor="#ffa84337"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
