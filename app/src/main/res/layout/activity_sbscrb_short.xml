<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space20"
    android:paddingRight="@dimen/space20"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space60"
    >

        <RelativeLayout
            android:id="@+id/rl_return_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/space20"
        >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space20"
                android:src="@mipmap/ic_return_back"
            />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预约短途出租"
            android:textColor="@color/black"
            android:textSize="@dimen/font16"
        />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space1"
        android:background="@color/gray"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space20"
    >

        <TextView
            android:layout_width="@dimen/space100"
            android:layout_height="@dimen/space50"
            android:gravity="center_vertical"
            android:text="转租时间"
            android:textSize="@dimen/font_normal"
        />

        <TextView
            android:id="@+id/tv_date_pick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space50"
            android:layout_marginLeft="@dimen/space20"
            android:gravity="center_vertical"
            android:text="201911-11"
            android:textSize="@dimen/font_normal"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/space1"
          android:background="@color/divider_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

        <TextView
            android:layout_width="@dimen/space100"
            android:layout_height="@dimen/space50"
            android:gravity="center_vertical"
            android:text="转租车型号"
            android:textSize="@dimen/font_normal"
        />

        <com.xfcar.driver.widget.ClearEditText
            android:id="@+id/et_car_brand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space50"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="转租车型号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/hint_text_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_normal"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/space1"
          android:background="@color/divider_gray"/>

</LinearLayout>